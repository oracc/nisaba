{
    "name": "nisaba",
    "displayName": "Nisaba",
    "description": "Support for ATF files",
    "version": "0.0.1",
    "publisher": "ucl-rsdg",
    "repository": {
        "type": "git",
        "url": "https://github.com/oracc/nisaba.git"
    },
    "engines": {
        "vscode": "^1.44.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:ucl-rsdg.arabicPreview",
        "onCommand:ucl-rsdg.validateAtf",
        "onCommand:ucl-rsdg.lemmatiseAtf",
        "onCommand:ucl-rsdg.aboutNisaba"
    ],
    "main": "./dist/extension",
    "contributes": {
        "commands": [
            {
                "command": "ucl-rsdg.arabicPreview",
                "title": "Show Arabic preview",
                "category": "Oracc",
                "icon": {
                    "light": "media/button_preview_light.svg",
                    "dark": "media/button_preview_dark.svg"
                }
            },
            {
                "command": "ucl-rsdg.validateAtf",
                "title": "Validate ATF",
                "category": "Oracc",
                "icon": {
                    "light": "media/button_validation_light.svg",
                    "dark": "media/button_validation_dark.svg"
                }
            },
            {
                "command": "ucl-rsdg.lemmatiseAtf",
                "title": "Lemmatise ATF",
                "category": "Oracc",
                "icon": {
                    "light": "media/button_lemmatisation_light.svg",
                    "dark": "media/button_lemmatisation_dark.svg"
                }
            },
            {
                "command": "ucl-rsdg.aboutNisaba",
                "title": "About Nisaba",
                "category": "Oracc",
                "icon": {
                    "light": "media/button_preview_light.svg",
                    "dark": "media/button_preview_dark.svg"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == atf",
                    "command": "ucl-rsdg.arabicPreview",
                    "group": "navigation@4"
                },
                {
                    "when": "resourceLangId == atf",
                    "command": "ucl-rsdg.validateAtf",
                    "group": "navigation@2"
                },
                {
                    "when": "resourceLangId == atf",
                    "command": "ucl-rsdg.lemmatiseAtf",
                    "group": "navigation@3"
                },
                {
                    "when": "resourceLangId == atf",
                    "command": "ucl-rsdg.aboutNisaba",
                    "group": "navigation@1"
                }
            ]
        },
        "keybindings": [
            {
                "command": "ucl-rsdg.validateAtf",
                "key": "ctrl+D",
                "mac": "cmd+D",
                "when": "editorTextFocus && editorLangId == atf"
            }
        ],
        "languages": [
            {
                "id": "atf",
                "aliases": [
                    "ATF",
                    "atf"
                ],
                "extensions": [
                    ".atf"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "atf",
                "scopeName": "source.atf",
                "path": "./syntaxes/atf.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "clean": "rm -rf ./out",
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "compile": "npm run clean && npx tsc -p ./",
        "package": "npx vsce package",
        "lint": "eslint src --ext ts",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "adm-zip": "^0.5.5",
        "mimemessage": "^1.0.5",
        "node-fetch": "^2.6.1",
        "winston": "^3.3.3",
        "winston-transport": "^4.4.0",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@types/adm-zip": "^0.4.33",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.13.52",
        "@types/node-fetch": "^2.5.12",
        "@types/vscode": "^1.44.0",
        "@types/xml2js": "^0.4.8",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "eslint": "^6.8.0",
        "mocha": "^7.1.2",
        "tmp": "^0.0.33",
        "ts-loader": "^9.2.5",
        "typescript": "^4.0.0",
        "vscode-oniguruma": "^1.5.0",
        "vscode-test": "^1.3.0",
        "vscode-textmate": "^5.2.0",
        "webpack": "^5.50.0",
        "webpack-cli": "^4.7.2"
    }
}
