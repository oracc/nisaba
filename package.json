{
    "name": "nisaba",
    "displayName": "Nisaba",
    "description": "Support for ATF files, like those used by Oracc and the Nahrein Network.",
    "version": "1.0.0",
    "publisher": "UCLResearchSoftwareDevelopmentGroup",
    "repository": {
        "type": "git",
        "url": "https://github.com/oracc/nisaba.git"
    },
    "engines": {
        "vscode": "^1.44.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:ucl-rsdg.arabicPreview",
        "onCommand:ucl-rsdg.validateAtf",
        "onCommand:ucl-rsdg.lemmatiseAtf",
        "onCommand:ucl-rsdg.aboutNisaba"
    ],
    "main": "./dist/extension",
    "contributes": {
        "commands": [
            {
                "command": "ucl-rsdg.arabicPreview",
                "title": "Show Arabic preview",
                "category": "Oracc",
                "icon": "$(open-preview)"
            },
            {
                "command": "ucl-rsdg.validateAtf",
                "title": "Validate ATF",
                "category": "Oracc",
                "icon": "$(check-all)"
            },
            {
                "command": "ucl-rsdg.lemmatiseAtf",
                "title": "Lemmatise ATF",
                "category": "Oracc",
                "icon": "$(symbol-number)"
            },
            {
                "command": "ucl-rsdg.aboutNisaba",
                "title": "About Nisaba",
                "category": "Oracc",
                "icon": "$(question)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "editorTextFocus && resourceLangId == atf",
                    "command": "ucl-rsdg.arabicPreview",
                    "group": "navigation@4"
                },
                {
                    "when": "editorTextFocus && resourceLangId == atf",
                    "command": "ucl-rsdg.validateAtf",
                    "group": "navigation@2"
                },
                {
                    "when": "editorTextFocus && resourceLangId == atf",
                    "command": "ucl-rsdg.lemmatiseAtf",
                    "group": "navigation@3"
                },
                {
                    "when": "editorTextFocus && resourceLangId == atf",
                    "command": "ucl-rsdg.aboutNisaba",
                    "group": "navigation@1"
                }
            ]
        },
        "keybindings": [
            {
                "command": "ucl-rsdg.aboutNisaba",
                "key": "ctrl+H",
                "mac": "cmd+H",
                "when": "editorTextFocus && editorLangId == atf"
            },
            {
                "command": "ucl-rsdg.validateAtf",
                "key": "ctrl+D",
                "mac": "cmd+D",
                "when": "editorTextFocus && editorLangId == atf"
            },
            {
                "command": "ucl-rsdg.lemmatiseAtf",
                "key": "ctrl+L",
                "mac": "cmd+L",
                "when": "editorTextFocus && editorLangId == atf"
            },
            {
                "command": "ucl-rsdg.arabicPreview",
                "key": "ctrl+;",
                "mac": "cmd+;",
                "when": "editorTextFocus && editorLangId == atf"
            }
        ],
        "languages": [
            {
                "id": "atf",
                "aliases": [
                    "ATF",
                    "atf"
                ],
                "extensions": [
                    ".atf"
                ],
                "configuration": "./atf-language-configuration.json"
            },
            {
                "id": "glo",
                "aliases": [
                    "Oracc Glossary"
                ],
                "extensions": [
                    ".glo"
                ],
                "configuration": "./glo-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "atf",
                "scopeName": "source.atf",
                "path": "./syntaxes/atf.tmLanguage.json"
            },
            {
                "language": "glo",
                "scopeName": "source.glo",
                "path": "./syntaxes/glo.tmLanguage.json"
            }
        ],
        "configurationDefaults": {
            "[atf]": {
                "editor.wordWrap": "on",
                "editor.unicodeHighlight.ambiguousCharacters": false
            },
            "[glo]": {
                "editor.wordWrap": "on",
                "editor.unicodeHighlight.ambiguousCharacters": false
            }
        }
    },
    "scripts": {
        "clean": "rm -rf ./out",
        "vscode:prepublish": "webpack --mode production",
        "publish": "npx vsce package && npx vsce publish",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "compile": "npm run clean && npx tsc -p ./",
        "package": "npx vsce package",
        "lint": "eslint src --ext ts",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "adm-zip": "^0.5.5",
        "mimemessage": "^1.0.5",
        "node-fetch": "^2.6.7",
        "winston": "^3.3.3",
        "winston-transport": "^4.4.0",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@types/adm-zip": "^0.4.33",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.13.52",
        "@types/node-fetch": "^2.5.12",
        "@types/vscode": "^1.44.0",
        "@types/xml2js": "^0.4.8",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vscode/test-electron": "^2.1.2",
        "eslint": "^8.0.1",
        "mocha": "^9.2.0",
        "tmp": "^0.0.33",
        "ts-loader": "^9.2.5",
        "typescript": "^4.0.0",
        "vscode-oniguruma": "^1.5.0",
        "vscode-textmate": "^5.2.0",
        "webpack": "^5.50.0",
        "webpack-cli": "^4.7.2"
    }
}
