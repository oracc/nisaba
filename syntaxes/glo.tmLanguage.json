{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Oracc Glossary",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#support"
        },
        {
            "include": "#comment"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.other.entry.glo",
                    "match": "^@(end |)entry\\b"
                },
                {
                    "name": "keyword.control.at.glo",
                    "match": "^@(alias|parts|bff|bases|form|allow|phon|root|stems|sense|(end |)senses|bib|collo|equiv|inote|isslp|note|oid|pleiades|pl_coord|pl_id|pl_alias|prop|rel)\\b"
                }
            ]
        },
        "support": {
            "patterns": [
                {
                    "name": "support.class.at.glo",
                    "match": "^@(project|lang|name|translang|cbd|props|reldel|i18n|proplist|letter|include)\\b"
                }
            ]
        },
        "comment": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.glo",
                    "match": "^#.*$"
                }
            ]
        }
    },
    "scopeName": "source.glo"
}