{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Oracc Glossary",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#support"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.other.entry.glo",
                    "match": "^@(end |)entry\\b"
                },
                {
                    "name": "keyword.control.at.glo",
                    "match": "^@(bases|form|sense|note|inote|equiv|isslp|bib|parts|bff|collo|prop)\\b"
                }
            ]
        },
        "support": {
            "patterns": [
                {
                    "name": "support.class.at.glo",
                    "match": "^@(project|lang|name|letter|proplist)\\b"
                }
            ]
        }
    },
    "scopeName": "source.glo"
}